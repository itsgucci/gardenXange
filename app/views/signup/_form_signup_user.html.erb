<%= form_for(@user, :url => { :action => 'create_user', :controller => 'signup' }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, :class => 'signup-field' %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'signup-field' %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => 'signup-field' %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, :class => 'signup-field' %>
  </div>
  <div class="field">
    <%= f.label :email_confirmation %>
    <%= f.email_field :email_confirmation, :class => 'signup-field' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn submit-button' %>
  </div>
<% end %>
