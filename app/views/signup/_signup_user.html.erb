<!-- The Signup User  modal -->
<div class="modal" id="signup">                                                                                                                                                                    
  <%= form_for(@user, :url => { :action => 'create_user', :controller => 'signup' }) do |f| %>                                                                                                              
    <div class="modal-header">
      <button class="close" data-dismiss="modal">Ã—</button>
      <h3>Step 1: Choose a username, password and email</h3>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="modal-body">
      <% if @modal_open %>
        <%= hidden_field_tag :modal_open %>
      <% end %>
      <p>
      <%= f.label :username %>
      <%= f.text_field :username, :class => 'signup-field' %>
      </p>
      <p>
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'signup-field' %>
      </p>
      <p>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :class => 'signup-field' %>
      </p>
      <p>
      <%= f.label :email %>
      <%= f.email_field :email, :class => 'signup-field' %>
      </p>
      <p>
      <%= f.label :email_confirmation %>
      <%= f.email_field :email_confirmation, :class => 'signup-field' %>
      </p>
      </div><!-- End modal-body -->

      <div class="modal-footer">
        <a href="#" data-dismiss="modal" class="btn">Cancel</a>
        <%= submit_tag "Next", :class => 'btn submit-button' %>
      </div>
  <% end %>
</div><!-- End modal -->
