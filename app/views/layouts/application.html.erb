<!DOCTYPE html>
<html>
<head>
  <title>gardenXange</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap.custom" %>
  <%= javascript_include_tag "jquery-1.7.2.min" %>
  <%= javascript_include_tag "bootstrap.min" %>
  <%= javascript_include_tag "jquery.tools.min" %>
  <!-- jQuery UI Autocomplete for selecting food items -->
  <%= javascript_include_tag "jquery-ui/development-bundle/ui/jquery.ui.core" %>
  <%= javascript_include_tag "jquery-ui/development-bundle/ui/jquery.ui.widget" %>
  <%= javascript_include_tag "jquery-ui/development-bundle/ui/jquery.ui.position" %>
  <%= javascript_include_tag "jquery-ui/development-bundle/ui/jquery.ui.autocomplete" %>
  <%= javascript_include_tag "select_edibles" %>
  <!-- END jQuery UI Autocomplete for selecting food items -->

  <%= javascript_include_tag "application" %>

  <!-- modals to visible  jQuery -->
  <script>
      $(document).ready(function() {
        if ( $('input#modal_open').length )
          $('div#signup').css('display', 'inline');
        if ( $('input#modal_login_open').length )
          $('div#login').css('display', 'inline');
       });   
  </script>
  <!-- END modals to visible jQuery -->

  <%= csrf_meta_tags %>
</head>
<body>
  <!-- javascript_include_tag 'select_edibles.js' %>-->
  <!-- javascript_include_tag 'jquery-ui/development-bundle/ui/jquery.ui.autocomplete.js' %>-->
  <%= render "shared/top_bar" %>
  <div class="container-fluid">
    <div class="row-fluid">
      <!-- The side menu -->
      <div class="span2">
        <div class="well sidebar-nav">
          <ul class="nav nav-list">
            <% if session[:user_id] %>
              <li class="nav-header">Food Items</li>
            <% end %>
          </ul>
        </div><!-- End sidebar-nav-->
      </div><!-- End side menu -->

      <!-- The main span -->
      <div class="span7">
        <!-- The login modal -->
        <%= render :partial => 'sessions/login' %>                                                                                                                                                
        <!-- The signup modal -->
        <%= render :partial => 'signup/signup_user' %>                                                                                                                                                
        
        <div class="hero-unit">
          <%= yield %>
        </div><!-- End hero unit -->
      </div><!-- End main span -->
    </div>
  </div>
</body>
</html>
